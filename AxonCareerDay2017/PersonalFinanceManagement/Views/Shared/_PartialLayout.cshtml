@RenderSection("PartialStyle", false)

<div class="wrapper wrapper-content wrapper-content-partial">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins ibox-partial">

                <div class="ibox-title ibox-title-partial">
                    <h3>@ViewBag.PartialTitle</h3>
                </div>

                <div class="ibox-content pjax-container ibox-content-partial">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#btnClose').click(function () {
            $('#modal-container').modal('hide');
            $('#modal-container').html('');
        });

        SetCurrencyText('.money-text');
    });
</script>

@RenderSection("PartialScript", false)

